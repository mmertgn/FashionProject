@model FashionStore.UI.Web.Models.HomePageViewModel
@{
    ViewBag.Title = "Elsa Giyim | Anasayfa";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<!-- Hero Slider -->
<section class="section-wrap nopadding">
    <div class="container">
        <div class="entry-slider">
            <div class="flexslider" id="flexslider-hero">
                <ul class="slides clearfix">
                    @foreach (var sliderPicture in Model.SliderPictures)
                    {
                        <li>
                            <img src="/Uploads/@sliderPicture.Picture.PicturePath" alt="@sliderPicture.Picture.AltAttribute">
                            <div class="img-holder img-@sliderPicture.Id"></div>
                            <div class="hero-holder text-center @sliderPicture.Slider.SliderTitlePosition-align">
                                <div class="hero-lines">
                                    <h1 class="hero-heading" style="color: @sliderPicture.Slider.TitleTextColor">@sliderPicture.Slider.SliderTitle</h1>
                                    <h4 class="hero-subheading uppercase" style="color: @sliderPicture.Slider.TitleTextColor">@sliderPicture.Slider.SilderDescription</h4>
                                </div>
                                <a href="/urunler/@sliderPicture.Slider.Category.SeoUrl" class="btn btn-lg btn-white"><span>Alışverişe Başla</span></a>
                            </div>
                        </li>
                    }

                </ul>
            </div>
        </div> <!-- end slider -->
    </div>
</section> <!-- end hero slider -->
<!-- New Arrivals -->
<section class="section-wrap new-arrivals pb-40">
    <div class="container">
        <div class="row heading-row">
            <div class="col-md-12 text-center">
                <h2 class="heading uppercase"><small>Yeni Ürünler</small></h2>
            </div>
        </div>
        <div class="row row-10">
            @foreach (var product in Model.NewArrivalProducts)
            {
                <div class="col-md-3 col-xs-6 animated-from">
                    <div class="product-item">
                        <div class="product-img">
                            <a href="/urun-detay/@product.SeoUrl">
                                @{
                                    var pictures = product.ProductPictures.ToList();
                                }
                                @if (pictures.Count < 2)
                                {
                                    if (pictures.Count == 0)
                                    {
                                        <img src="/Uploads/defaultproduct.jpg" alt="">

                                    }
                                    else
                                    {

                                        <img src="/Uploads/@pictures[0].Picture.PicturePath" alt="">
                                    }
                                }
                                else
                                {
                                    <img src="/Uploads/@pictures[0].Picture.PicturePath" alt="">
                                    <img src="/Uploads/@pictures[1].Picture.PicturePath" alt="" class="back-img">
                                }

                            </a>
                            @if (product.StockQuantity == 0)
                            {
                                <span class="sold-out valign">Stokta Yok</span>
                            }
                            @if (product.OldPrice != null)
                            {
                                <div class="product-label">
                                    <span class="sale">İndirim</span>
                                </div>
                            }
                            <div class="product-actions">
                                <a href="/Account/WishlistAdd/@product.Id" class="product-add-to-wishlist" data-toggle="tooltip" data-placement="bottom" title="İstek Listeme Ekle">
                                    <i class="fa fa-heart"></i>
                                </a>
                                <a href="@Url.Action("CartAdd", "Home",new{Quantity = 1, ProductId = product.Id, returnUrl = Request.RawUrl})" class="product-add-to-wishlist" data-toggle="tooltip" data-placement="bottom" title="Sepete Ekle">
                                    <i class="fa fa-shopping-cart"></i>
                                </a>
                            </div>
                        </div>
                        <div class="product-details">
                            <h3 style="white-space:nowrap;overflow:hidden;-o-text-overflow:ellipsis;-ms-text-overflow:ellipsis;text-overflow:ellipsis;">
                                <a class="product-title" href="/urun-detay/@product.SeoUrl">@product.Name</a>
                            </h3>
                            <span class="price">
                                @if (product.OldPrice != null)
                                {
                                    <del>
                                        <span>@product.OldPrice ₺</span>
                                    </del>
                                }
                                <ins>
                                    <span class="ammount">@product.Price ₺</span>
                                </ins>
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div> <!-- end row -->
    </div>
</section> <!-- end new arrivals -->
